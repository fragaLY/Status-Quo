<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration>

    <!-- Appender -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %-5p: %c - %m%n"/>
        </layout>
    </appender>

    <!-- Application Loggers -->
    <logger name="console">
        <level value="info"/>
    </logger>

    <!-- Loggers -->
    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <logger name="org.thymeleaf">
        <level value="info"/>
    </logger>

    <logger name="jtc.vk.tc.dao" additivity="false">
        <level value="warn"/>
    </logger>

    <logger name="jtc.vk.tc">
        <level value="debug"/>
    </logger>

    <logger name="org.hibernate">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
        <level value="error"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
